            <div class="col-md-4">
              <input type="checkbox" name="profile_teacher">
              <label>professores</label>
            </div>
          </div>
          <div class="row base_800">
            <div class="col-md-4">
              <input type="checkbox" name="profile_teenager">
              <label>adolescentes</label>
            </div>
            <div class="col-md-4">
              <input type="checkbox" name="profile_blind">
              <label>deficientes visuais</label>
            </div>
            <div class="col-md-4">
              <input type="checkbox" name="profile_employee">
              <label>funcionários</label>
            </div>
          </div>
