            <div class="col-md-7">
              <input type="text" name="contact_name" placeholder="seu nome completo" required>
            </div>
            <div class="col-md-5">
              <input type="text" name="contact_position" placeholder="seu cargo/relação com a escola" required>
            </div>
          </div>
          <div class="row base_800">
            <div class="col-md-7">
              <input type="text" name="contact_email" placeholder="seu e-mail" required>
            </div>
            <div class="col-md-5">
              <input type="text" name="contact_phone" placeholder="seu telefone" required>
            </div>
          </div>

