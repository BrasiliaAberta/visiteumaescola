              <input type="checkbox" name="profile_adult">
              <label>alunos adultos</label>
            </div>
            <div class="col-md-4">
              <input type="checkbox" name="profile_physical_disable">
              <label>deficientes físicos</label>
            </div>
            <div class="col-md-4">
              <input type="checkbox" name="profile_family">
              <label>famílias</label>
            </div>
