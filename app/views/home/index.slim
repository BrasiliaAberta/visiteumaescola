/--Volunteer Form--/
<section class="content-2" id="formVolunteer">
    <div class="container">
      <form id="volunteer_user" class="new_user" method="post" action="users/">
        <div class="field">
          <label for="user_email" class="control-label">Email:</label> 
          <input id="user_email" class="form-control" type="email" name="user[email]" value="" autofocus="autofocus"></input>
        </div>
        <div class="field">
          <label for="user_password" class="control-label">Senha:</label> 
          <input id="user_password" class="form-control" type="password" name="user[password]" value="" autocomplete="off"></input>
        </div>
        <div class="field">
          <label for="user_password_confirmation" class="control-label">Confirme a senha:</label>
          <input id="user_password_confirmation" class="form-control" type="password" name="user[password_confirmation]" value="" autocomplete="off"></input>
        </div>
        <div class=field>
          <label for="user_volunteer_profile_skills" class="control-label">Habilidades:</label>
          <input id="user_volunteer_profile_skills" class="form-control" type="text" name="user[volunteer_profile_attributes][skills]" value="" autocomplete="off"></input>
        </div>
      </form>
    </div>
    <div class="container">
      <button type="button" id="submitVolunteer" class="btn btn-primary">enviar meu cadastro!</button>
    </div>  
</section>

/--School Form--/
<section class="content-2" hidden="true" id="formSchool">
    <div class="container">
      <form id="school_user" class="new_user" method="post" action="users/">
        <input id="user_role_id" name="user[role_id]" value="2" hidden="true"></input>
        <div class="field">
          <label for="user_email" class="control-label">Email:</label> 
          <input id="user_email" class="form-control" type="email" name="user[email]" value="" autofocus="autofocus"></input>
        </div>
        <div class="field">
          <label for="user_password" class="control-label">Senha:</label> 
          <input id="user_password" class="form-control" type="password" name="user[password]" value="" autocomplete="off"></input>
        </div>
        <div class="field">
          <label for="user_password_confirmation" class="control-label">Confirme a senha:</label>
          <input id="user_password_confirmation" class="form-control" type="password" name="user[password_confirmation]" value="" autocomplete="off"></input>
        </div>
        <div class=field>
          <label for="user_school_profile_address" class="control-label">Endereço:</label>
          <input id="user_school_profile_address" class="form-control" type="text" name="user[school_profile_attributes][address]" value="" autocomplete="off"></input>
        </div>
        <div class=field>
          <label for="user_school_profile_size" class="control-label">Quantidade de alunos:</label>
          <input id="user_school_profile_size" class="form-control" type="text" name="user[school_profile_attributes][size]" value="" autocomplete="off"></input>
        </div>
      </form>
    </div>
    <div class="container">
      <button type="button" id="submitVolunteer" class="btn btn-primary">enviar meu cadastro!</button>
    </div>  
</section>

